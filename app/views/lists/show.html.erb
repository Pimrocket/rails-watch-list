<div class="container">
  <h2 class="text-center"><%= @list.name %></h2>
  <ul>
    <% @list.movies.each do |movie| %>
      <li>
        <h3><%= movie.title %></h3>
        <p><%= movie.overview %></p>
        <p class="text-center">Rating: <%= movie.rating %>/10</p>
        <% movie.bookmarks.each do |bookmark| %>
          <p class="text-center"> Comment: <%= bookmark.comment %></p>
          <p><%= link_to "remove movie from list", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this movie?" } %></p>
       <% end %>
      </li>
    <% end %>
  </ul>
</div>
<p class="m-3"><%= link_to "Add new bookmark!", new_list_bookmark_path(@list) %></p>
<p class="m-3"><%= link_to "Go back to lists", lists_path %></p>
